FROM python:3.11-slim

WORKDIR /app

# Copy requirements
COPY requirements.txt .

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy AI service code
COPY ai_service/ ./ai_service/

# Set Python path
ENV PYTHONPATH=/app

# Expose port
EXPOSE 8001

# Run AI service
CMD ["python", "-m", "ai_service.main"]
